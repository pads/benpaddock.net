{
    "name": "benpaddock.net",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lintci": "next lint --quiet",
        "axe": "axe localhost:3000 --exit",
        "a11y": "start-server-and-test start http://localhost:3000 axe",
        "test": "npm run lintci",
        "postinstall": "npx husky install && npx webdriver-manager update"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run lint"
        }
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "dependencies": {
        "@fontsource/raleway": "^5.1.0",
        "@fontsource/roboto-slab": "^5.1.0",
        "@fortawesome/fontawesome-svg-core": "^6.7.1",
        "@fortawesome/free-brands-svg-icons": "^6.7.1",
        "@fortawesome/free-regular-svg-icons": "^6.7.1",
        "@fortawesome/free-solid-svg-icons": "^6.7.1",
        "@fortawesome/react-fontawesome": "^0.2.2",
        "autoprefixer": "^10.4.20",
        "date-fns": "^4.1.0",
        "glob": "^11.0.0",
        "gray-matter": "^4.0.3",
        "mastodon": "^1.2.2",
        "next": "^15.0.3",
        "path": "^0.12.7",
        "postcss": "^8.4.49",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "rss": "^1.2.2",
        "sharp": "0.32.6",
        "slug": "^10.0.0",
        "tailwindcss": "^3.4.15"
    },
    "devDependencies": {
        "@axe-core/cli": "^4.10.1",
        "@next/eslint-plugin-next": "^15.0.4",
        "@types/node": "^22.10.1",
        "@types/react": "^18.3.12",
        "@types/rss": "0.0.32",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.16.0",
        "eslint-config-next": "^15.1.2",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-unused-imports": "^4.1.4",
        "husky": "^9.1.7",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^3.4.2",
        "prettier-plugin-import-sort": "0.0.7",
        "start-server-and-test": "^2.0.8",
        "typescript": "^5.7.2",
        "webdriver-manager": "^12.1.9"
    }
}
